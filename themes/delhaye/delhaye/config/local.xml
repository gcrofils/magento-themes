<?xml version="1.0" encoding="UTF-8"?>
<layout>
<default>
  <!-- Remove callouts and rarely used stuff -->
  <!-- <remove name="right.poll"/> -->
  <remove name="right.permanent.callout"/> <!-- remove back to scholl banner in right panel -->
  <remove name="catalog.compare.sidebar"/> <!-- remove compare block in right panel -->
  <!-- <remove name="left.permanent.callout"/> -->
 
  <!-- add the local stylesheet -->
  <reference name="head">
    <action method="addCss"><stylesheet>css/delhaye.css</stylesheet></action>
  </reference>
	
	<reference name="header">
		<block type="core/template" template="page/html/wrapper.phtml">
    <action method="setId"><id>some-custom-identificator</id></action>
 
     <!-- optional -->
     <action method="setTag"><tag>span</tag></action> <!-- div is used if not specified -->
     <action method="setParams"><params>class="custom-class"</params></action>
 
     <!-- insert wrapped blocks here -->
  </block>
 </reference>
	
   <!-- add a decoration div -->	
	 <reference name="top.menu">
    <block type="cms/block" name="cms_top_menu_decoration" before="-">
      <action method="setBlockId"><block_id>top_menu_decoration</block_id></action>
    </block>
  </reference>
	
	   <!-- add a decoration div --> 
   <reference name="top.container">
    <block type="cms/block" name="cms_header_right">
      <action method="setBlockId"><block_id>header_right</block_id></action>
    </block>
  </reference>
	
</default>
</layout>